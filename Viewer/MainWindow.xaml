<Window x:Class="Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:y="clr-namespace:Atreyu.Views;assembly=Atreyu"
        Title="MainWindow"
        Width="800"
        Height="600">
    <DockPanel Name="MainDockPanel">
         <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Export">
                <MenuItem Header="_Compressed w/o Gate (WiP)"/>
                <MenuItem Header="_Compressed w/ Gate (WiP)"/>
                <MenuItem Header="_Uncompressed w/o Gate (WiP)"/>
                <MenuItem Header="_Uncompressed w/ Gate (WiP)"/>
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Name="OpenButton"
                        Command="{Binding Path=OpenFile}"
                        Content="Open" />
				<Button Name="SaveButton"
                        Command="{Binding Path=SaveHeatmap}"
                        Content="Save Heatmap" />
            </ToolBar>
        </ToolBarTray>

        <ContentControl x:Name="CombinedHeatMapViewControl">
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <y:CombinedHeatmapView Name="CombinedHeatmapView" />
                </DataTemplate>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </DockPanel>
</Window>
